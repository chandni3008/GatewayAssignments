
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Product Managment</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style type="text/css">
        .col-margin {
            margin-top: 40px;
        }

        .navbar-header {
            float: left;
            padding: 15px;
            text-align: center;
            width: 100%;
        }

        .navbar-brand {
            float: none;
            font-weight: bold;
            font-size: 30px;
        }

        .links {
            font-weight: bold;
            font-size: 20px;
        }
    </style>
    @if (TempData["Message"] != null)
    {

        <script type="text/javascript">
            window.onload = function () {

                alert("@TempData["Message"]");
            }

        </script>
    }
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
                
                @Html.ActionLink("Welcome "+ Session["User"].ToString(), "Index", "Main", new { area = "" }, new { @class = "navbar-brand " })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Product List", "Index", "Main", new { @class = "links " })</li>

                    <li>
                        @Html.ActionLink("Add Prodduct", "Create", "Main", new { @class = "links " })
                    </li>
                    <li>@Html.ActionLink("Logout", "Logout", "Main", new { @class = "links " })</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Product Managment</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
